@page "/carrot-table"
<link rel="stylesheet" href="/css/Carrot-table.css" />
<h3>Carrot Table</h3>

<div class="container" id="container">
    <div class="table-wrapper">
        <table id="table_resize" contenteditable="true">
            <thead>
                <tr>
                    <th>Column 1</th>
                    <th>Column 2</th>
                    <th>Column 3</th>
                    <th>Column 4</th>
                    <th>Column 5</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < 60; i++)
                {
                    <tr>
                        <td>Row @(i + 1), Column 1</td>
                        <td>Row @(i + 1), Column 2</td>
                        <td>Row @(i + 1), Column 3</td>
                        <td>Row @(i + 1), Column 4</td>
                        <td>Row @(i + 1), Column 5</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script src="js/Carrot-Table.js"></script>